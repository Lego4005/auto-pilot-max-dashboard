# Auto-Pilot-Max Team Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# ========================================
# REQUIRED: MCP Server Configuration
# ========================================

# Your Auto-Pilot-Max MCP server URL
NEXT_PUBLIC_MCP_SERVER_URL=https://auto-pilot-max-mcp-v2.fly.dev

# Admin API key for MCP server access
MCP_ADMIN_KEY=autopilot-admin-64dd7aa8c9b0454a

# ========================================  
# REQUIRED: Team Configuration
# ========================================

# Team member email address
NEXT_PUBLIC_USER_EMAIL=colby@bit9.ai

# User ID for the system  
NEXT_PUBLIC_USER_ID=Q11wu5ZabHa2JdfCqzIQcUxM

# Vercel team slug (for deployment)
VERCEL_TEAM=legonow

# ========================================
# OPTIONAL: GitHub Integration  
# ========================================

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo, read:user, read:org
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# GitHub repository to track (defaults to auto-pilot-max)
GITHUB_REPO=auto-pilot-max
GITHUB_OWNER=legonow

# ========================================
# OPTIONAL: Analytics & Performance
# ========================================

# Enable real-time analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Dashboard refresh interval in milliseconds (30 seconds = 30000)
NEXT_PUBLIC_REFRESH_INTERVAL=30000

# Performance monitoring
NEXT_PUBLIC_TRACK_PERFORMANCE=true

# ========================================
# OPTIONAL: Development Settings
# ========================================

# Environment (development, staging, production)
NODE_ENV=production

# Debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# DEPLOYMENT NOTES
# ========================================

# 1. For Vercel deployment, add these as Environment Variables in your Vercel dashboard
# 2. For GitHub integration, ensure your token has proper permissions
# 3. MCP server URL should be accessible from Vercel's edge network
# 4. Test all connections before deploying to production

